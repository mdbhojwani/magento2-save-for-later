<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="saveforlater_page_head_components" template="Mdbhojwani_SaveForLater::js/components.phtml"/>
        </referenceBlock>
        <referenceBlock name="top.links">
            <block class="Mdbhojwani\SaveForLater\Block\Link" name="saveforlater-link" after="my-account-link">
                <arguments>
                    <argument name="sortOrder" xsi:type="number">70</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceContainer name="sidebar.additional">
            <block class="Mdbhojwani\SaveForLater\Block\Customer\Sidebar" name="saveforlater_sidebar" as="saveforlater" template="Mdbhojwani_SaveForLater::sidebar.phtml" ifconfig="saveforlater/general/show_in_sidebar">
                <arguments>
                    <argument name="saveForLaterDataViewModel" xsi:type="object">Mdbhojwani\SaveForLater\ViewModel\SaveForLaterData</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
