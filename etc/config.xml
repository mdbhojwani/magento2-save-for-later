<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <saveforlater>
            <general>
                <active>1</active>
                <show_in_sidebar>1</show_in_sidebar>
            </general>
            <email>
                <email_identity>general</email_identity>
                <email_template>saveforlater_email_email_template</email_template>
                <number_limit>10</number_limit>
                <text_limit>255</text_limit>
            </email>
            <saveforlater_link>
                <use_qty>0</use_qty>
            </saveforlater_link>
        </saveforlater>
        <captcha translate="label">
            <frontend>
                <areas>
                    <share_saveforlater_form>
                        <label>Share Save for Later Form</label>
                    </share_saveforlater_form>
                </areas>
            </frontend>
        </captcha>
        <customer>
            <captcha>
                <shown_to_logged_in_user>
                    <share_saveforlater_form>1</share_saveforlater_form>
                </shown_to_logged_in_user>
            </captcha>
        </customer>
    </default>
</config>
