        <images module="Magento_Catalog">
            <image id="saveforlater_thumbnail" type="small_image">
                <width>240</width>
                <height>300</height>
            </image>
        </images>
    </media>
    <vars module="Mdbhojwani_SaveForLater">
        <var name="product_image_size">113</var>        <!-- Product image size used in save for later -->
    </vars>
</view>
